@charset "UTF-8";
a{color: #2fa0ec;text-decoration: none;outline: none;}
a:hover,a:focus{color:#74777b;}
* {
	box-sizing:border-box;
	margin-top: 0px;
}
body, html {
	width:100%;
	height:100%;
}
body {
	padding: 0px;
	background-color: #494A5F;
	color: #FFF;
	margin:0px;
	padding: 0px;
}
.magnify {
	z-index: 2;
	position: relative;
	// width:900px;
    // border: 3px solid #999;
  	// height:563px;
	margin:0px auto;
	overflow: hidden;
}

.magnify img {
	display:block;
}

.element_to_magnify {
	position: relative;
	// width:900px;
  	// height:563px;
  	overflow: hidden;
}
.element_to_magnify span {
  display:block;
  position:absolute;
  top:140px;
  left:25px;
  // background-color:rgba(200, 200, 200, .25);
  padding:4px;
  font-size:18px;
  color:#fff;
}
.element_to_magnify span + img{
	width: 100%;
	height: auto;
    vertical-align:top;
}
.magnified_element {
	
}

.magnify_glass {
	z-index: 300;
	position: absolute;
	border: 4px solid #CCC;
	border-radius: 50%;
	width: 100px;
	height: 100px;
	overflow:hidden;
    top:50%;
    left:10px;
}

