@charset "utf-8";
.container {
	width: 400px;
	margin: 20px auto 0 auto;
	position: relative;
	font-family: 微软雅黑;
	font-size: 12px;
}
.container p {
	line-height: 12px;
	line-height: 0px;
	height: 0px;
	margin: 10px;
	color: #bbb
}
.action {
	width: 90%;
	height: 30px;
	margin: 0 auto;
	margin-top: 20px;
}
.cropped {
	position: absolute;
	right: 70px;
	top: 0;
	width: 90px;
	height: 200px;
	padding: 4px;
	text-align: center;
}
.cropped img{border: 1px solid #e4e4e4; float: left;}
.imageBox {
	position: relative;
	height: 200px;
	width: 200px;
	background: #999999;
	overflow: hidden;
	background-repeat: no-repeat;
	cursor: move;
}
.imageBox .thumbBox {
	position: absolute;
	top: 50%;
	left: 50%;
	width: 118px;
	height: 118px;
	margin-top: -59px;
	margin-left: -59px;
	box-sizing: border-box;
	border: 1px dashed #fff;
	box-shadow: 0 0 0 1000px rgba(0, 0, 0, 0.5);
	background: none repeat scroll 0% 0% transparent;
}
.imageBox .spinner {
	position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  text-align: center;
  line-height: 400px;
  color: #2F2A2A;
  background: rgba(213, 211, 211, 0.7);
}
