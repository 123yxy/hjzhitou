/*选择文件上传*/
.new-contentarea {
	width: 165px;
	overflow:hidden;
	margin: 0 auto;
	position:relative;float:left;
}
.new-contentarea label {
	width:100%;
	height:100%;
	display:block;
	line-height: 30px;
}
.new-contentarea em{ display: block; text-align: left; width: 70px; height: 30px;  font-size:14px ; color: #666; float: left;}
.new-contentarea input[type=file] {
	width:60px;
	height:30px;
	background:none;
	margin: 0 auto;
	position:absolute;
	right:50%;
	margin-right:-60px;
	top:0;
	right/*\**/:0px\9;
	margin-right/*\**/:0px\9;
	width/*\**/:10px\9;
	opacity:0;
	filter:alpha(opacity=0);
	z-index:2;
}
a.upload-img{
	width:60px;
	display: inline-block;
	height:30px;
	line-height: 30px;
	font-size: 14px;
	color: #FFFFFF;
	background-color: #5bc0de;
	border-radius: 3px;
	text-decoration:none;
	cursor:pointer;
	border: 0px #5bc0de solid;
}
a.upload-img:hover{
	background-color: #5bc0de;
}
